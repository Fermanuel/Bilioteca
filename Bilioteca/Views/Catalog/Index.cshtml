

<div class="container my-5">
    <h2 class="mb-4"><i class="bi bi-book"></i> Catálogo de Libros</h2>
    <div class="table-responsive">
        <table id="catalogoLibros" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Autor</th>
                    <th>Género</th>
                    <th>Año</th>
                    <th>Disponibilidad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Cien Años de Soledad</td>
                    <td>Gabriel García Márquez</td>
                    <td>Realismo Mágico</td>
                    <td>1967</td>
                    <td><span class="badge bg-success">Disponible</span></td>
                    <td class="action-btns">
                        <button class="btn btn-sm btn-primary" title="Ver"><i class="bi bi-eye"></i></button>
                        <button class="btn btn-sm btn-warning" title="Editar"><i class="bi bi-pencil"></i></button>
                        <button class="btn btn-sm btn-danger" title="Eliminar"><i class="bi bi-trash"></i></button>
                    </td>
                </tr>
                <tr>
                    <td>Don Quijote de la Mancha</td>
                    <td>Miguel de Cervantes</td>
                    <td>Novela</td>
                    <td>1605</td>
                    <td><span class="badge bg-secondary">Prestado</span></td>
                    <td class="action-btns">
                        <button class="btn btn-sm btn-primary" title="Ver"><i class="bi bi-eye"></i></button>
                        <button class="btn btn-sm btn-warning" title="Editar"><i class="bi bi-pencil"></i></button>
                        <button class="btn btn-sm btn-danger" title="Eliminar"><i class="bi bi-trash"></i></button>
                    </td>
                </tr>
                <!-- Agrega más filas según sea necesario -->
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <link href="~/modules/Catalog/css/catalog.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/modules/Catalog/js/catalog.js"></script>
