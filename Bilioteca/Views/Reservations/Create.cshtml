<div class="container my-5">
    <div class="table-section">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-calendar-check me-2"></i>Reservaciones</h2>
            <button class="btn btn-success" id="btnNuevaReserva" data-bs-toggle="modal" data-bs-target="#modalNuevaReserva">
                <i class="bi bi-plus-lg me-1"></i> Nueva Reservación
            </button>
        </div>

        <div class="table-responsive">
            <table id="tablaReservas" class="table table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Cliente</th>
                        <th>Libro</th>
                        <th>Inicio</th>
                        <th>Fin</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Se llena vía DataTables -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal: Crear Reservación -->
<div class="modal fade" id="modalNuevaReserva" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <form id="formNuevaReserva" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-calendar-plus me-2"></i>Crear Reservación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3">
                    <!-- Cliente -->
                    <div class="col-md-6">
                        <label for="n_resCliente" class="form-label">Cliente</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-circle"></i></span>
                            <input type="text" id="n_resCliente" name="cliente" class="form-control" placeholder="Nombre del cliente" required>
                        </div>
                    </div>
                    <!-- Libro -->
                    <div class="col-md-6">
                        <label for="n_resLibro" class="form-label">Libro</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-book"></i></span>
                            <input type="text" id="n_resLibro" name="libro" class="form-control" placeholder="Título del libro" required>
                        </div>
                    </div>
                    <!-- Fecha Inicio -->
                    <div class="col-md-6">
                        <label for="n_resInicio" class="form-label">Fecha Inicio</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                            <input type="date" id="n_resInicio" name="inicio" class="form-control" required>
                        </div>
                    </div>
                    <!-- Fecha Fin -->
                    <div class="col-md-6">
                        <label for="n_resFin" class="form-label">Fecha Fin</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-calendar-x"></i></span>
                            <input type="date" id="n_resFin" name="fin" class="form-control" required>
                        </div>
                    </div>
                    <!-- Notas -->
                    <div class="col-12">
                        <label for="n_resNotas" class="form-label">Notas (opcional)</label>
                        <textarea id="n_resNotas" name="notas" class="form-control" rows="3" placeholder="Comentarios…"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cancelar
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i>Guardar Reservación
                </button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link href="~/modules/Reservations/crear-reservation/css/crear-reservation.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/modules/Reservations/crear-reservation/js/crear-reservation.js"></script>
}