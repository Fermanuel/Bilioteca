
<div class="container">

    <!-- Encabezado -->
    <div class="container my-4">
        <h1 class="mb-3"><i class="bi bi-journal-bookmark-fill me-2"></i>Dashboard Biblioteca</h1>
        <p class="text-muted">Resumen de actividad y estadísticas del sistema de biblioteca.</p>
    </div>

    <!-- Tarjetas Informativas -->
    <div class="container mb-4">
        <div class="row g-3">
            <div class="col-md-4">
                <div class="card text-bg-primary h-100">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-book-half display-6 me-3"></i>
                        <div>
                            <h5 class="card-title">Libros Disponibles</h5>
                            <p class="card-text fs-4 counter">1,200</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-bg-success h-100">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-people-fill display-6 me-3"></i>
                        <div>
                            <h5 class="card-title">Usuarios Registrados</h5>
                            <p class="card-text fs-4 counter">850</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-bg-warning h-100">
                    <div class="card-body d-flex align-items-center">
                        <i class="bi bi-journal-check display-6 me-3"></i>
                        <div>
                            <h5 class="card-title">Préstamos Activos</h5>
                            <p class="card-text fs-4 counter">320</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficos -->
    <div class="container mb-4">
        <div class="row g-3">
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header">
                        Préstamos Mensuales
                    </div>
                    <div class="card-body">
                        <canvas id="lineChart" height="200"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header">
                        Préstamos por Categoría
                    </div>
                    <div class="card-body">
                        <canvas id="barChart" height="200"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Préstamos -->
    <div class="container mb-4">
        <div class="card">
            <div class="card-header">
                Últimos Préstamos
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Usuario</th>
                                <th>Libro</th>
                                <th>Fecha Préstamo</th>
                                <th>Fecha Devolución</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Ana López</td>
                                <td>1984</td>
                                <td>2025-04-10</td>
                                <td>2025-04-17</td>
                            </tr>
                            <tr>
                                <td>Juan Pérez</td>
                                <td>Cien Años de Soledad</td>
                                <td>2025-04-12</td>
                                <td>2025-04-19</td>
                            </tr>
                            <tr>
                                <td>María Gómez</td>
                                <td>El Principito</td>
                                <td>2025-04-15</td>
                                <td>2025-04-22</td>
                            </tr>
                            <!-- Agrega más filas según sea necesario -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


@section Styles {
    <link rel="stylesheet" href="~/modules/Dashboard/css/dashboard.css" />
}

@section Scripts {
    <script src="~/modules/Dashboard/js/dashboard.js"></script>
}